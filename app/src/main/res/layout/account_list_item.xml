<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/firstSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="BALANCE"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_account_balanceInCents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="BALANCE"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_account_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Currency"
                android:textSize="12sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/secondSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/firstSection">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="AccountID"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp" />


            <TextView
                android:id="@+id/tv_account_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="AccountID"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Account Name"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_account_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"

                android:text="account number"
                android:textSize="10sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/thirdSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/secondSection">

            <TextView
                android:id="@+id/tv_account_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="TYPE"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_alias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="ALIAS"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_iban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="IBAN"
                android:textSize="10sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/fourthSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thirdSection">

            <TextView
                android:id="@+id/tv_linkedaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="linked"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="ALIAS"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_productType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Type"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_savings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="savings"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_targetamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Type"
                android:textSize="10sp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>